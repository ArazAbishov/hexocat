<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_owner_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginLeft="@dimen/recyclerview_item_padding"
        android:layout_marginStart="@dimen/recyclerview_item_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:orientation="vertical"
        android:padding="@dimen/recyclerview_item_padding">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textview_repository_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/recyclerview_item_text_large"
            app:fontFamily="@font/roboto_regular" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textview_repository_description"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/recyclerview_item_text_medium"
            app:fontFamily="@font/roboto_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textview_repository_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fork"
                android:drawableStart="@drawable/ic_fork"
                android:gravity="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/recyclerview_item_text_medium"
                app:fontFamily="@font/roboto_regular"
                tools:text="45" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textview_repository_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_star"
                android:drawableStart="@drawable/ic_star"
                android:gravity="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/recyclerview_item_text_medium"
                app:fontFamily="@font/roboto_regular"
                tools:text="85" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
